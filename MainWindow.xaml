<Window x:Class="OmniTransfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OmniTransfer Setup" Height="300" Width="400" Background="#F3F3F3">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="OmniTransfer" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
        <TextBlock Text="Manage Windows Shell Integration" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="Gray"/>

        <Button Content="Install Right-Click Menu" Height="40" Margin="0,5" Click="InstallShell_Click" Background="#0078D4" Foreground="White" FontWeight="SemiBold"/>
        <Button Content="Remove Right-Click Menu" Height="40" Margin="0,5" Click="RemoveShell_Click"/>

        <TextBlock x:Name="StatusLabel" Margin="0,10,0,0" HorizontalAlignment="Center" Text="Ready"/>
    </StackPanel>
</Window>
